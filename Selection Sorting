#include <stdio.h>
#include <conio.h>
int SelSort(int ar[50], int size);

int main()
{
    system("cls");
    int ar[50], item, n, i, index;
    printf("\nEnter desired array size: ");
    scanf("%d", &n);
    printf("\nEnter array elements\n");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &ar[i]);
    }
    SelSort(ar, n);
    printf("\nSorted array is:\n");
    for (i = 0; i < n; i++)
    {
        printf("%d\t", ar[i]);
    }
    getch();
}
int SelSort(int ar[50], int size)
{
    int small, pos, temp;
    for (int i = 0; i < size - 1; i++)
    {
        small = ar[i];
        pos = i;
        for (int j = i + 1; j < size; j++)
        {
            if (ar[j] < small)
            {
                small = ar[j];
                pos = j;
            }
        }
        temp = ar[i];
        ar[i] = ar[pos];
        ar[pos] = temp;
    }
}
